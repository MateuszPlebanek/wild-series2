{% extends 'base.html.twig' %}

{% block title %}{{ actor.name }}{% endblock %}

{% block body %}
  <h1>{{ actor.name }}</h1>

  {% if actor.picture %}
    <img
      src="{{ vich_uploader_asset(actor) }}"
      alt="{{ actor.name }}"
      style="max-width: 220px; margin-bottom: 1rem;"
    >
  {% endif %}

  <h2>Séries</h2>
  <ul>
    {% for program in actor.programs %}
      <li>
        <a href="{{ path('program_show', { slug: program.slug }) }}">
          {{ program.title }}
        </a>
      </li>
    {% else %}
      <li>Aucune série</li>
    {% endfor %}
  </ul>

  <p>
    <a href="{{ path('actor_index') }}">← Tous les acteurs</a>
  </p>
{% endblock %}
