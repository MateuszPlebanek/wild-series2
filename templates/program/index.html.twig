{% extends 'base.html.twig' %}

{% block title %}Toutes les séries{% endblock %}

{% block body %}
    <h1>Toutes les séries de la table program :</h1>

    <p>
    <a class="btn btn-primary" href="{{ path('program_new') }}">+ New program</a> 
    <a class="btn btn-secondary" href="{{ path('app_season_index') }}">Seasons (admin)</a>
    <a class="btn btn-secondary" href="{{ path('app_episode_index') }}">Episodes (admin)</a>
    <a class="btn btn-primary" href="{{ path('app_index') }}">Retour à l'accueil</a>
    </p>

    {% for program in programs %}
        <div class="mb-4">
            <h2>{{ loop.index }} / {{ program.title }} - Catégorie : {{ program.category.name }}</h2>
            <p>{{ program.synopsis }}</p>
            <a href="{{ path('program_show', { slug: program.slug }) }}">Voir la fiche</a>
        </div>
    {% else %}
        <p>Aucune série trouvée.</p>
    {% endfor %}

    
{% endblock %}
