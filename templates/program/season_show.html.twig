{% extends 'base.html.twig' %}

{% block title %}{{ program.title }} — Saison {{ season.number }}{% endblock %}

{% block body %}
  <h1>{{ program.title }} — Saison {{ season.number }}</h1>
  <p>Année : {{ season.year }}</p>
  {% if season.description %}
    <p>{{ season.description }}</p>
  {% endif %}

  <h2>Épisodes</h2>
  <ul>
    {% for episode in season.episodes %}
      <li>#{{ episode.number }} — {{ episode.title }}<br>{{ episode.synopsis }}</li>
    {% else %}
      <li>Aucun épisode.</li>
    {% endfor %}
  </ul>

  <a href="{{ path('program_show', { id: program.id }) }}">← Retour à la série</a>
{% endblock %}
