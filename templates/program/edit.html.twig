{% extends 'base.html.twig' %}

{% block title %}Modifier la série{% endblock %}

{% block body %}

<h1>Modifier la série : {{ program.title }}</h1>

{{ form_start(form) }}
    {{ form_widget(form) }}
    <button class="btn btn-primary">Enregistrer</button>
{{ form_end(form) }}

<p>
    <a href="{{ path('program_show', { slug: program.slug }) }}">
        ← Retour à la série
    </a>
</p>

{% endblock %}
